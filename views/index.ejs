<!-- Hero Section -->
<div class="jumbotron text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4">Bem-vindo à Barbearia</h1>
        <p class="lead mb-4">Agende seu horário de forma rápida e fácil</p>
        <% if (!user) { %>
            <div class="mt-4">
                <a href="/auth/register" class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-user-plus me-2"></i>Registrar
                </a>
                <a href="/auth/login" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Entrar
                </a>
            </div>
        <% } else { %>
            <div class="mt-4">
                <% if (user.tipo === 'admin') { %>
                    <a href="/admin/dashboard" class="btn btn-primary btn-lg">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard Administrativo
                    </a>
                <% } else if (user.tipo === 'funcionario') { %>
                    <a href="/funcionario/dashboard" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-tie me-2"></i>Dashboard do Funcionário
                    </a>
                <% } else { %>
                    <a href="/cliente/dashboard" class="btn btn-primary btn-lg">
                        <i class="fas fa-calendar-alt me-2"></i>Meus Agendamentos
                    </a>
                <% } %>
            </div>
        <% } %>
    </div>
</div>

<!-- Features Section -->
