                        <pre class="mb-0"><%= error.stack %></pre>
                    </div>
                <% } %>
                <a href="/" class="btn btn-primary mt-4">
                    <i class="fas fa-home"></i> Voltar para a pÃ¡gina inicial
                </a>
            </div>
        </div>
    </div>
</div> 